<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
        integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Alt Z - for line format -->
    <!-- ctrl / - comment -->
    <link rel="stylesheet" href="/css/studentdashboard.css">
    <link rel="stylesheet" href="/css/roomform.css">
</head>

<body>


    <div class="form-box">
        <p class="display-6 text-center">Create Class Room</p>

        <form action="#" id="form1">
            <div class="form-floating mb-3">
                <input type="text" class="form-control" id="course_title" name="course_title"
                    placeholder="course title">
                <label for="course_title">Course Title</label>
            </div>
            <div class="form-floating">
                <input type="text" class="form-control" id="course_code" name="course_code" placeholder="course_code">
                <label for="course_code">Course Code</label>
            </div>
            <div class="form-floating mt-3">
                <select class="form-select" id="semester" name="semester" aria-label="Floating label select example">
                    <% let sem=["1st","2nd","3rd","4th","5th","6th","7th","8th","9th","10th","11th","12th"]; %>
                        <% for(let x=0;x<sem.length;x++){ %>
                            <option value="<%= sem[x] %>">
                                <%= sem[x] %>
                            </option>
                            <% } %>
                </select>
                <label for="semester">Select Semester</label>
            </div>
            <div class="form-floating mt-3">
                <select class="form-select" id="section" name="section" aria-label="Floating label select example">
                    <% let sec=["A","B","C","D","E","F","G","H"]; %>
                        <% for(let x=0;x<sec.length;x++){ %>
                            <option value="<%= sec[x] %>">
                                <%= sec[x] %>
                            </option>
                            <% } %>
                </select>
                <label for="section">Select Section</label>
            </div>
            <p class="display-6 fs-4 mt-3">Select weekdays</p>
            <div class="weekdays d-flex justify-content-between w-75">
                <% let days=["SAT","SUN","MON","TUES","WED","THU","FRI"]; %>
                    <% for(let x=0;x<days.length;x++){ %>

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="<%= days[x] %>" id="<%= days[x] %>">
                            <label class="form-check-label" for="<%= days[x] %>">
                                <%= days[x] %>
                            </label>
                        </div>

                        <% } %>

            </div>

            <input type="text" id="weekdays" name="weekdays" hidden>

            <div class="class-time d-flex justify-content-between my-3">
                <div class="time">
                    <div class="form-floating">
                        <input type="time" class="form-control" id="class_start_time" name="class_start_time"
                            placeholder="Password">
                        <label for="class_start_time">Class Start Time</label>
                    </div>
                </div>
                <div class="time">
                    <div class="form-floating">
                        <input type="time" class="form-control" id="class_end_time" name="class_end_time"
                            placeholder="Password">
                        <label for="class_end_time">Class End Time</label>
                    </div>
                </div>

            </div>

            <button id="sbt" class="btn btn-primary w-100 mt-3 py-3">Create Room</button>

            <!-- Button trigger modal -->
            <button hidden type="button" id="success-btn" class="btn btn-primary" data-bs-toggle="modal"
                data-bs-target="#exampleModal">
                created
            </button>

            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Room Status</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <h2>Room is created successfully.</h2>
                        </div>
                        <div class="modal-footer">
                            <a href="/tdash" class="btn btn-primary">Go to Dashboard</a>
                        </div>
                    </div>
                </div>
            </div>

        </form>

    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

    <script src="/js/createRoom.js"></script>
</body>

</html>